<?xml version="1.0"?>
<config>
    <modules>
        <IntegerNet_Solr>
            <version>0.1.0</version>
        </IntegerNet_Solr>
    </modules>
    <global>
        <models>
            <integernet_solr>
                <class>IntegerNet_Solr_Model</class>
                <resourceModel>integernet_solr_resource</resourceModel>
            </integernet_solr>

            <integernet_solr_resource>
                <class>IntegerNet_Solr_Model_Resource</class>
            </integernet_solr_resource>
            <catalog_resource>
                <rewrite>
                    <layer_filter_attribute>IntegerNet_Solr_Model_Resource_Catalog_Layer_Filter_Attribute</layer_filter_attribute>
                </rewrite>
            </catalog_resource>
        </models>

        <blocks>
            <integernet_solr>
                <class>IntegerNet_Solr_Block</class>
            </integernet_solr>
        </blocks>

        <helpers>
            <integernet_solr>
                <class>IntegerNet_Solr_Helper</class>
            </integernet_solr>
        </helpers>

        <index>
            <indexer>
                <integernet_solr>
                    <model>integernet_solr/indexer</model>
                    <depends>
                        <catalog_url/>
                        <catalog_price/>
                    </depends>
                </integernet_solr>
            </indexer>
        </index>

        <events>
            <catalog_block_product_list_collection>
                <observers>
                    <review>
                        <type>model</type>
                        <class>review/observer</class>
                        <method>catalogBlockProductCollectionBeforeToHtml</method>
                    </review>
                </observers>
            </catalog_block_product_list_collection>
        </events>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <integernet_solr>
                    <files>
                        <default>IntegerNet_Solr.csv</default>
                    </files>
                </integernet_solr>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <integernet_solr>
                    <file>integernet/solr.xml</file>
                </integernet_solr>
            </updates>
        </layout>
        <events>
            <catalog_block_product_list_collection>
                <observers>
                    <review>
                        <type>disabled</type>
                    </review>
                </observers>
            </catalog_block_product_list_collection>
        </events>
    </frontend>

    <default>
        <integernet_solr>
            <general>
                <is_active>1</is_active>
                <log>1</log>
            </general>
            <fuzzy>
                <is_active>1</is_active>
                <sensitivity>0.6</sensitivity>
            </fuzzy>
        </integernet_solr>
    </default>

    <phpunit>
        <suite>
            <modules>
                <IntegerNet_Solr/>
            </modules>
        </suite>
    </phpunit>
</config>